#:kivy 1.8

<MindMapWidget>
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos
	Button:
		text: 'Settings'
		size_hint: None, None
		font_size: 15
		on_release: app.open_settings()

<Vertex>:
	size: self.size
	pos: self.pos
	size_hint: None, None

	do_rotation: False

	canvas.before:
		Color:
		    rgba: 1, 1, 1, 1
		Rectangle:
	        pos: (0,0)
	        size: self.size

	canvas:
	    Color:
	        rgba: self.colour
	    Line:
	        ellipse: (0, 0, self.size[0], self.size[1])
	        width: 2
	    #Ellipse:
	    	#pos: (0,0)
	    	#size: (self.size[0], self.size[1])

<DeleteButton>
	text: 'X'
    font_size: 14
    background_color: (.8, 0, .043, 1) #rgb: 204, 0 ,11  
    size: 10,10
    size_hint: None, None
    	

            
